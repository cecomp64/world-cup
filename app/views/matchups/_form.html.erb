<%= form_for(@matchup) do |f| %>
  <% if @matchup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@matchup.errors.count, "error") %> prohibited this matchup from being saved:</h2>

      <ul>
      <% @matchup.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :home_id %><br>
    <%= f.select :home_id, Team.all.sort_by(&:name).map {|a| [a.name.capitalize, a.id]} %>
  </div>
  <div class="field">
    <%= f.label :away_id %><br>
    <%= f.select :away_id, Team.all.sort_by(&:name).map {|a| [a.name.capitalize, a.id]} %>
  </div>

  <div class="field">
    <%= f.label :homeScore %><br>
    <%= f.text_field :homeScore %>
  </div>
  <div class="field">
    <%= f.label :awayScore %><br>
    <%= f.text_field :awayScore %>
  </div>
  <div class="field">
    <%= f.label :final %><br>
    <%= f.hidden_field :final, :value => true %>
    True
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
